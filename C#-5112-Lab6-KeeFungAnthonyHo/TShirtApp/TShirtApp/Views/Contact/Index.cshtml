
@{
    ViewBag.Title = "Contact Us";
}

<h2>Contact Us</h2>

<form method="GET" action="/Contact/Thanks">
    <div>
        <label>Name:</label><input type="text" name="ContactName"/>
    </div>

    <div>
        <label>Subject:</label><input type="text" name="ContactSubject"/>
    </div>

     <div>
         <label>Message:</label><textarea name="ContactMessage"></textarea>
    </div>
    <div>
        <input type="submit" value="Submit!"/>

    </div>
</form>